{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@/api": ["../sportradar/sportradar.ts"],
      "@/db": ["./db.ts"],
      "@/mock/*": ["../mockData/*"]
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
